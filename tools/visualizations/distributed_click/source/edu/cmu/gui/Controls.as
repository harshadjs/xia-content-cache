package edu.cmu.gui {	import flash.display.MovieClip;	import flash.events.*;	import flash.text.TextField;	import flash.utils.Dictionary;	import flash.display.Shape;	import flash.display.Stage;		import edu.cmu.MyGlobal;		public class Controls extends Floater {				// Constants:		// Public Properties:		// Private Properties:				// Initialization:		public function Controls() {			super();						this.cmbxTrafficType.addEventListener(Event.CHANGE, trafficTypeChanged);		}			// Public Methods:						// Protected Methods:				protected function trafficTypeChanged(event:Event):void {			MyGlobal.trafficType = cmbxTrafficType.selectedItem.data;		}				protected override function setDefaultPosition():void {			var stage:Stage = Stage(this.parent);							this.x = 10;			this.y = stage.stageHeight - this.height - 10;		}	}}